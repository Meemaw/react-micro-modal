{
  "name": "react-micro-modal",
  "version": "0.0.0-development",
  "description": "React accessible micro modal component",
  "keywords": [
    "react",
    "micro",
    "modal",
    "component",
    "accessible",
    "frontend"
  ],
  "main": "dist/react-micro-modal.umd.js",
  "module": "dist/react-micro-modal.es5.js",
  "typings": "dist/react-micro-modal.d.ts",
  "files": [
    "dist"
  ],
  "author": "Matej <ematej.snuderl@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Meemaw/react-micro-modal"
  },
  "bugs": {
    "url": "https://github.com/Meemaw/react-micro-modal/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts{,x}' 'test/**/*.ts{,x}'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && cp src/index.css dist && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage --verbose",
    "test:coveralls": "yarn test && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf ./coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "yarn lint && yarn test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/test/.*|\\.)\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@storybook/react": "^5.0.6",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/storybook__react": "^4.0.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "colors": "^1.3.2",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "fork-ts-checker-webpack-plugin": "^1.0.1",
    "husky": "^1.0.1",
    "jest": "^24.7.1",
    "jest-config": "^24.7.1",
    "jest-transform-css": "^2.0.0",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^1.9.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.20.1",
    "semantic-release": "^15.13.3",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.4000"
  },
  "peerDependencies": {
    "react": "16"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  }
}
